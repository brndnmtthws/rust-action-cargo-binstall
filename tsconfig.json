{
  "extends": "@tsconfig/node-lts",
  "compilerOptions": {
    "target": "es6",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*.ts", "src/main.mts", "src/util.ts"],
  "exclude": ["node_modules"]
}
